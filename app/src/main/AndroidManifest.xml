        </activity>
        <activity
            android:name=".activity.AddContactActivity"
            android:label="@string/edit_contact" />
        <activity
            android:name=".activity.EditContactActivity"
            android:label="@string/edit_contact" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="9ab5527c4da04f24b381ea6b77dcdb3332767181" />

        <activity
            android:name=".activity.SearchContactActivity"
            android:label="@string/search_contact" />
        <activity
            android:name=".activity.DevelopedByActivity"
            android:label="@string/developed_by" />
        <activity android:name=".activity.ContactsActivity"
            android:label="@string/contacts"></activity>
    </application>

</manifest>